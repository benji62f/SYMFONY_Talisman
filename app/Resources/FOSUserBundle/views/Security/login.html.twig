{% block fos_user_content %}
    {% if error is defined %}
        {% if error %}
            {{ error.message }}
        {% endif %}
    {% endif %}
    <form name="login_base" action="{{ path('fos_user_security_check') }}" method="post">
        <fieldset>
            <legend>Login</legend>
            <div class="form-group">
                <label for="username">Email</label>
                <input type="email" id="username" name="_username" value="" class="form-control" placeholder="Email"/>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" id="password" name="_password" class="form-control"  placeholder="Password"/>
            </div>
            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            <button type="submit" class="btn btn-primary" style="float: right; width: 250px;">
                <i class="fas fa-sign-in-alt" aria-hidden="true"></i> Login
            </button>

        </fieldset>
    </form>
    <a id="forgot_btn" href="{{ path('fos_user_resetting_request') }}" class="btn btn-info btn-block">
        <i class="fa fa-sign-in" aria-hidden="true"></i> Forgot password
    </a>
    <a id="register_btn" class="btn btn-info btn-block" href="{{ path('fos_user_registration_register') }}">
        S'inscrire</a>
{% endblock %}
